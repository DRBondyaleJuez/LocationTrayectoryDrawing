    <style name="Theme.LocationTrayectoryDrawing" parent="Base.Theme.LocationTrayectoryDrawing" />

    <!-- SAVE BUTTON STYLE-->
    <style name = "SaveButtonStyle" parent="Widget.AppCompat.Button">
        <item name="srcCompat">@drawable/save_icon</item>
        <item name="android:tint"> @color/white</item>
        <item name="android:background">@drawable/dark_button_with_border</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">7dp</item>
    </style>

    <!-- REFRESH BUTTON STYLE-->
    <style name = "RestartButtonStyle" parent="Widget.AppCompat.Button">
        <item name="srcCompat">@drawable/refresh_icon</item>
